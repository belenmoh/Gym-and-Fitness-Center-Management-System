<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="650.0" prefWidth="850.0" styleClass="reception-theme" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gym.controller.ReceptionistDashboardController">
    <top>
        <VBox style="-fx-background-color: #546E7A; -fx-padding: 15;">
            <children>
                <Label text="Receptionist Dashboard" styleClass="title" textFill="white">
                    <font>
                        <Font name="Segoe UI Bold" size="22.0" />
                    </font>
                </Label>
                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <children>
                        <Label fx:id="welcomeLabel" text="Welcome:" styleClass="subtitle" textFill="white" />
                        <Button fx:id="logoutButton" onAction="#handleLogout" styleClass="button" text="Logout" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Register Member">
                    <content>
                        <VBox spacing="20.0" style="-fx-padding: 25;">
                            <children>
                                <VBox styleClass="card" spacing="20.0">
                                    <children>
                                        <Label text="Register New Member" styleClass="title" />
                                        <GridPane hgap="20.0" vgap="15.0">
                                            <children>
                                                <Label text="Name:" styleClass="label-header" GridPane.rowIndex="0" />
                                                <TextField fx:id="memberNameField" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                                <Label text="Username:" styleClass="label-header" GridPane.rowIndex="1" />
                                                <TextField fx:id="memberUsernameField" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                                <Label text="Password:" styleClass="label-header" GridPane.rowIndex="2" />
                                                <PasswordField fx:id="memberPasswordField" styleClass="password-field" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                                <Label text="Membership Type:" styleClass="label-header" GridPane.rowIndex="3" />
                                                <ComboBox fx:id="membershipTypeCombo" styleClass="combo-box" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                                <Label text="Price:" styleClass="label-header" GridPane.rowIndex="4" />
                                                <Label fx:id="membershipPriceLabel" styleClass="price-display" text="ETB 0.00" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2196F3;" />
                                            </children>
                                            <columnConstraints>
                                                <ColumnConstraints prefWidth="120.0" />
                                                <ColumnConstraints prefWidth="200.0" />
                                            </columnConstraints>
                                        </GridPane>
                                        <Button fx:id="registerMemberButton" onAction="#handleRegisterMember" styleClass="highlight-button" text="Register Member" />
                                        <Label fx:id="registerMessageLabel" styleClass="subtitle" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Renew Membership">
                    <content>
                        <VBox spacing="20.0" style="-fx-padding: 25;">
                            <children>
                                <VBox styleClass="card" spacing="20.0">
                                    <children>
                                        <Label text="Renew Membership" styleClass="title" />
                                        <GridPane hgap="20.0" vgap="15.0">
                                            <children>
                                                <Label text="Member ID:" styleClass="label-header" GridPane.rowIndex="0" />
                                                <TextField fx:id="renewMemberIdField" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                                <Label text="New Membership:" styleClass="label-header" GridPane.rowIndex="1" />
                                                <ComboBox fx:id="renewMembershipCombo" styleClass="combo-box" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                                <Label text="Price:" styleClass="label-header" GridPane.rowIndex="2" />
                                                <TextField fx:id="renewPriceField" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                            </children>
                                            <columnConstraints>
                                                <ColumnConstraints prefWidth="120.0" />
                                                <ColumnConstraints prefWidth="200.0" />
                                            </columnConstraints>
                                        </GridPane>
                                        <Button fx:id="renewMembershipButton" onAction="#handleRenewMembership" styleClass="highlight-button" text="Renew Membership" />
                                        <Label fx:id="renewMessageLabel" styleClass="subtitle" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Record Payment">
                    <content>
                        <VBox spacing="20.0" style="-fx-padding: 25;">
                            <children>
                                <VBox styleClass="card" spacing="20.0">
                                    <children>
                                        <Label text="Record Payment" styleClass="title" />
                                        <GridPane hgap="20.0" vgap="15.0">
                                            <children>
                                                <Label text="Member ID:" styleClass="label-header" GridPane.rowIndex="0" />
                                                <TextField fx:id="paymentMemberIdField" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                                <Label text="Amount:" styleClass="label-header" GridPane.rowIndex="1" />
                                                <TextField fx:id="paymentAmountField" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                                <Label text="Payment Type:" styleClass="label-header" GridPane.rowIndex="2" />
                                                <ComboBox fx:id="paymentTypeCombo" styleClass="combo-box" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                            </children>
                                            <columnConstraints>
                                                <ColumnConstraints prefWidth="120.0" />
                                                <ColumnConstraints prefWidth="200.0" />
                                            </columnConstraints>
                                        </GridPane>
                                        <Button fx:id="recordPaymentButton" onAction="#handleRecordPayment" styleClass="highlight-button" text="Record Payment" />
                                        <Label fx:id="paymentMessageLabel" styleClass="subtitle" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="View Members">
                    <content>
                        <VBox spacing="15.0" style="-fx-padding: 25;">
                            <children>
                                <Label text="All Members" styleClass="title" />
                                <TableView fx:id="membersTableView" prefHeight="350.0" prefWidth="750.0">
                                    <columns>
                                        <TableColumn fx:id="memberIdColumn" prefWidth="75.0" text="ID" />
                                        <TableColumn fx:id="memberNameColumn" prefWidth="150.0" text="Name" />
                                        <TableColumn fx:id="memberUsernameColumn" prefWidth="150.0" text="Username" />
                                        <TableColumn fx:id="memberMembershipColumn" prefWidth="150.0" text="Membership" />
                                        <TableColumn fx:id="memberEndDateColumn" prefWidth="150.0" text="End Date" />
                                    </columns>
                                </TableView>
                                <HBox spacing="15.0" alignment="CENTER_LEFT">
                                    <children>
                                        <Button fx:id="refreshMembersButton" onAction="#handleRefreshMembers" styleClass="button" text="Refresh" />
                                        <Button fx:id="cancelMembershipButton" onAction="#handleCancelMembership" styleClass="button" text="Cancel Membership" style="-fx-background-color: #e74c3c;" />
                                        <Label fx:id="cancelMembershipMessageLabel" styleClass="subtitle" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>